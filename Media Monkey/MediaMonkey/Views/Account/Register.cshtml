@model MediaMonkey.Models.RegisterViewModel
@{
    Layout = "_Layout";
}

    @using (Html.BeginForm(FormMethod.Post, new { @enctype = "multipart/form-data", @class = "col-md-6 col-md-offset-3" }))
    {
        <h2 class="col-md-offset-4 col-md-8">Register</h2>
        <div class="form-group row">
            @Html.LabelFor(x => x.FirstName, "First Name", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.FirstName) 
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.LastName, "Last Name", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.LastName)
            </div>
        </div>
         <div class="form-group row">
            @Html.LabelFor(x => x.Username, "Username", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Username)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.EmailAddress, "Email Address", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.EmailAddress)                
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Password, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.PasswordConfirm, "Confirm Password", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.PasswordFor(x => x.PasswordConfirm, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PasswordConfirm)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.CountryId, "Country", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(x => x.CountryId, new SelectList(@Model.AllCountries, "Id", "CountryName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CountryId)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Avatar, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <input type="file" id="Avatar" name="upload" />
            </div>
        </div>

        @Html.ValidationSummary()

        <div class="form-group row">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    }