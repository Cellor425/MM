<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name=viewport content="width=device-width, initial-scale=1.0">
  <title>Media Monkey</title>
  <link href="/../css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="/../css/main.css" rel="stylesheet" type="text/css">
</head>
<header>

</header>

<body>
<nav class="navbar navbar-expand-lg" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <span class="navbar-left"><img src="/images/Logo/Logo.png" width="125" height="50" class="img-responsive"></span>
    </div>
    <!-- Collection of nav links, forms, and other content for toggling -->
    <div id="navbarCollapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
            <li><a class="nav-link" href="@Url.Action("Index", "Home" )">Home</a></li>
            <li><a class="nav-link" href="@Url.Action("About", "Home" )">Team</a></li>
            @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
            {
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" aria-haspopup="true" aria-expanded="false" href="#">Admin <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Videos", "Admin" )">Video List</a></li>
                        @if (User.IsInRole("Owner"))
                        {
                            <li><a href="@Url.Action("Profiles", "Owner" )">Profile List</a></li>
                        }
                    </ul>
                </li>
            }
        </ul>
        <form class="navbar-form navbar-right">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </form>
        @await Html.PartialAsync("_LoginPartial")
    </div>
</nav>

<main role="main" class="container">
  @RenderBody()
</main>

<footer id="footer">
  <span>Â© Media Monkey @DateTime.Now.Year</span>
</footer>

<script src="/../js/jquery-3.3.1.js"></script>
<script src="/../js/bootstrap.min.js"></script>
</body>


</html>