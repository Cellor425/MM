@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model MediaMonkey.DataAccess.Models.VideoInfo
@{
    Layout = "_Layout";
}

<h2>Confirm Video Deletion</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()        
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.Title):
            @Html.DisplayFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description):
            @Html.DisplayFor(x => x.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.UploadDate):
            @Html.DisplayFor(x => x.UploadDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Views):
            @Html.DisplayFor(x => x.Views, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Profile):
            @Html.DisplayFor(x => x.Profile.Username, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-danger" role="button">Delete</button>
        </p>
    }
</div>